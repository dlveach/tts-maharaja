<XmlLayout xmlns="XmlLayout"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="XmlLayout Configuration/XmlLayout.xsd">


<Defaults>

  <Panel class="buttonPanel"
        active="true"
        color="0,0,0,0"
        height="50" width="50"
        rotation="0 0 0"
        scale="1 1" />

  <Panel class="playerPanel"
        active="false"
        color="rgba(0,0,0,0)"
        position="50 330 -5"
        height="300" width="500"
        rotation="0 0 180"
        scale="1 1" />

  <Button class="dialButton"
        hoverClass="hover"
        pressClass="press"
        selectClass="select"
        onClick="dialClick"
        image="teal_dot"
        color="rgba(0,0,0,0)" />

  <Button class="playerButton"
        hoverClass="hover"
        pressClass="press"
        selectClass="select"
        onClick="buttonClick"
        image="Sprites/Layout/Button"
        color="Blue" />
  <Button class="hover"
        color="Cyan" />
  <Button class="press"
        color="White" />
  <Button class="select"
        color="White" />

  <TableLayout
        useGlobalCellPadding="false"
        rowBackgroundColor="rgba(0,0,0,0)" />

  <Row
        dontUseTableRowBackground="true"
        color="rgba(0,0,0,0)"  />

  <Cell
        dontUseTableCellBackground="true" />  <!-- set to false to show grid lines -->

</Defaults>

<Panel id="back_button_panel" active="false"
  color="rgba(0,0,0,0)"
  height="100" width="100"
  rotation="180 0 0"
  position="0 0 10"
  scale="1 1"
  padding="0 0 20 20"
  >
  <Button class="playerButton" id="modify" >
    <Text fontSize="20" color="rgb(1,1,0)" text="Modify" />
  </Button>
</Panel>

<Panel class="playerPanel" id="player_btn_panel" >
  <TableLayout columnWidths="80 210 210">
    <Row id="confirmBtnRow" preferredHeight="60" active="false">
      <Cell padding="200 100 0 0" columnSpan="3">
        <Button id="confirm" class="playerButton">
          <Text fontSize="28" color="rgb(1,1,0)" text="Confirm"/>
        </Button>
      </Cell>
    </Row>
    <Row id="extraActionBtnRow" preferredHeight="60" active="false">
      <Cell padding="150 50 0 0" columnSpan="3">
        <Button id="btn_3" class="playerButton">
          <Text id="extra_action" fontSize="28" color="rgb(1,1,0)" text="Use Extra Action"/>
        </Button>
      </Cell>
    </Row>
    <Row id="emptyBtnRow" preferredHeight="60"/>
    <Row preferredHeight="20" />
    <Row id="action_A_row" preferredHeight="60">
      <Cell padding="0 0 0 0">
        <Text fontSize="40" color="Gray" text="A"/>
      </Cell>
      <Cell columnSpan="2" padding="0 0 0 0">
        <Button id="action-A" class="playerButton">
          <Text id="action_A_txt" fontSize="30" color="rgb(1,1,0)" text="Build a Palace + House" />
        </Button>
      </Cell>
    </Row>
    <Row preferredHeight="10" />
    <Row id="action_B_row" preferredHeight="60">
      <Cell padding="0 0 0 0">
        <Text fontSize="40" color="Gray" text="B"/>
      </Cell>
      <Cell columnSpan="2" padding="0 0 0 0">
        <Button id="action-B" class="playerButton">
          <Text id="action_B_txt" fontSize="30" color="rgb(1,1,0)" text="Exchange Character" />
        </Button>
      </Cell>
    </Row>
    <Row preferredHeight="10" />
    <Row id="action_C_row" preferredHeight="60">
      <Cell padding="0 0 0 0">
        <Text fontSize="40" color="Gray" text="C"/>
      </Cell>
      <Cell columnSpan="2" padding="0 0 0 0">
        <Button id="action-C" class="playerButton">
          <Text id="action_C_txt" fontSize="30" color="rgb(1,1,0)" text="Build Two Houses" />
        </Button>
      </Cell>
    </Row>
  </TableLayout>
</Panel>

<Panel class="buttonPanel" id="track_panel" position="0 140 -10" >
  <Button class="dialButton" id="track_btn" />
</Panel>

<Panel class="buttonPanel" id="coins_panel" position="90 100 -10" >
  <Button class="dialButton" id="coins_btn" />
</Panel>

<Panel class="buttonPanel" id="character_panel" position="140 20 -10" >
  <Button class="dialButton" id="character_btn"/>
</Panel>

<Panel class="buttonPanel" id="palace-house_panel" position="130 -80 -10" >
  <Button class="dialButton" id="palace-house_btn"/>
</Panel>

<Panel class="buttonPanel" id="palace_panel" position="60 -140 -10" >
  <Button class="dialButton" id="palace_btn"/>
</Panel>

<Panel class="buttonPanel" id="quarry_panel" position="-40 -140 -10" >
  <Button class="dialButton" id="quarry_btn"/>
</Panel>

<Panel class="buttonPanel" id="move_panel" position="-120 -80 -10" >
  <Button class="dialButton" id="move_btn"/>
</Panel>

<Panel class="buttonPanel" id="2houses_panel" position="-140 20 -10" >
  <Button class="dialButton" id="2houses_btn"/>
</Panel>

<Panel class="buttonPanel" id="house_panel" position="-90 100 -10" >
  <Button class="dialButton" id="house_btn"/>
</Panel>

</XmlLayout>
