<XmlLayout xmlns="XmlLayout"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="XmlLayout Configuration/XmlLayout.xsd">


<Defaults>

  <Panel class="buttonPanel"
        active="true"
        color="0,0,0,0"
        height="50" width="50"
        rotation="0 0 0"
        scale="1 1" />

  <Panel class="playerPanel"
        active="false"
        color="Blue"
        image="Sprites/Layout/Base"
        position="0 330 -5"
        height="300" width="400"
        rotation="0 0 180"
        scale="1 1"
        padding="10 10 10 10"
        raycastTarget="false"
        />

  <Button class="dialButton"
        hoverClass="hover"
        pressClass="press"
        selectClass="select"
        onClick="dialClick"
        image="teal_dot"
        color="rgba(0,0,0,0)" />

  <Button class="modifyButton"
        hoverClass="hover"
        pressClass="press"
        selectClass="select"
        onClick="Global/dialModifyClick"
        image="Sprites/Layout/Button"
        color="Blue" />

  <Button class="hover"
        color="Cyan" />
  <Button class="press"
        color="White" />
  <Button class="select"
        color="White" />

  <TableLayout
        useGlobalCellPadding="false"
        rowBackgroundColor="rgba(0,0,0,0)" />

  <Row
        dontUseTableRowBackground="true"
        color="rgba(0,0,0,0)"  />

  <Cell
        dontUseTableCellBackground="true" />  <!-- set to false to show grid lines -->

  <Text
        color="rgb(1,1,0)"
        textShadow="rgba(0,0,0,0.6)" />

  <Text class="actionText"
        alignment="MiddleLeft"
        fontSize="16" />

</Defaults>

<Panel id="back_button_panel" active="false"
  color="rgba(0,0,0,0)"
  height="100" width="100"
  rotation="180 0 0"
  position="0 0 10"
  scale="1 1"
  padding="0 0 20 20"
  >
  <Button class="modifyButton" id="modify" >
    <Text fontSize="20" color="rgb(1,1,0)" text="Modify" />
  </Button>
</Panel>

<Panel id="player_actions_panel" class="playerPanel">
  <Panel color="#031427">
    <TableLayout columnWidths="100 0">
      <Row preferredHeight="35" >
        <Cell padding="0 0 0 5" columnSpan="2" >
          <Image image="Sprites/Outline_With_Background" color="#191E6B">
            <Text fontSize="16" text="Reqired Actions"/>
          </Image>
        </Cell>
      </Row>
      <Row id="row_action_1" preferredHeight="30" active="false">
        <Cell padding="0 0 0 0">
          <Text id="status_text_1" fontSize="16" text="Required"/>
        </Cell>
        <Cell padding="0 0 0 0">
          <Text id="action_text_1" class="actionText" text="Modify the Governor Track"/>
        </Cell>
      </Row>
      <Row id="row_action_2" preferredHeight="30" active="false">
        <Cell padding="0 0 0 0">
          <Text id="status_text_2" fontSize="16" text="Required"/>
        </Cell>
        <Cell padding="0 0 0 0">
          <Text id="action_text_2" class="actionText" text="Get 2 Gold"/>
        </Cell>
      </Row>
      <Row id="row_action_3" preferredHeight="30" active="false">
        <Cell padding="0 0 0 0">
          <Text id="status_text_3" fontSize="16" text="Required"/>
        </Cell>
        <Cell padding="0 0 0 0">
          <Text id="action_text_3" class="actionText" text="Quarry 2 Houses into the pool"/>
        </Cell>
      </Row>
      <Row id="row_action_4" preferredHeight="30" active="false">
        <Cell padding="0 0 0 0">
          <Text id="status_text_4" fontSize="16" text="Required"/>
        </Cell>
        <Cell padding="0 0 0 0">
          <Text id="action_text_4" class="actionText" text="Get 2 Gold from the bank"/>
        </Cell>
      </Row>
      <Row id="row_action_5" preferredHeight="30" active="false">
        <Cell padding="0 0 0 0">
          <Text id="status_text_5" fontSize="16" text="Required"/>
        </Cell>
        <Cell padding="0 0 0 0">
          <Text id="action_text_5" class="actionText" text="Build a House (City)"/>
        </Cell>
      </Row>
      <Row id="row_action_6" preferredHeight="30" active="false">
        <Cell padding="0 0 0 0">
          <Text id="status_text_6" fontSize="16" text="Required"/>
        </Cell>
        <Cell padding="0 0 0 0">
          <Text id="action_text_6" class="actionText" text="Build a House (City/Village)"/>
        </Cell>
      </Row>
      <Row preferredHeight="35">
        <Cell padding="0 0 5 5" columnSpan="2">
          <Image image="Sprites/Outline_With_Background" color="#191E6B">
            <Text fontSize="16" text="Optional Actions"/>
          </Image>
        </Cell>
      </Row>
      <Row id="row_action_7" preferredHeight="30" active="false">
        <Cell padding="0 0 0 0">
          <Text id="status_text_7" fontSize="16" text="Free"/>
        </Cell>
        <Cell padding="0 0 0 0">
          <Text id="action_text_7" class="actionText" text="Build/Move a house for free"/>
        </Cell>
      </Row>
    </TableLayout>
  </Panel>
</Panel>

<Panel class="buttonPanel" id="dialBtnPnl_1" position="0 140 -10" >
  <Button class="dialButton" id="dialBtn_1" />
</Panel>

<Panel class="buttonPanel" id="dialBtnPnl_2" position="90 100 -10" >
  <Button class="dialButton" id="dialBtn_2" />
</Panel>

<Panel class="buttonPanel" id="dialBtnPnl_3" position="140 20 -10" >
  <Button class="dialButton" id="dialBtn_3"/>
</Panel>

<Panel class="buttonPanel" id="dialBtnPnl_4" position="130 -80 -10" >
  <Button class="dialButton" id="dialBtn_4"/>
</Panel>

<Panel class="buttonPanel" id="dialBtnPnl_5" position="60 -140 -10" >
  <Button class="dialButton" id="dialBtn_5"/>
</Panel>

<Panel class="buttonPanel" id="dialBtnPnl_6" position="-40 -140 -10" >
  <Button class="dialButton" id="dialBtn_6"/>
</Panel>

<Panel class="buttonPanel" id="dialBtnPnl_7" position="-120 -80 -10" >
  <Button class="dialButton" id="dialBtn_7"/>
</Panel>

<Panel class="buttonPanel" id="dialBtnPnl_8" position="-140 20 -10" >
  <Button class="dialButton" id="dialBtn_8"/>
</Panel>

<Panel class="buttonPanel" id="dialBtnPnl_9" position="-90 100 -10" >
  <Button class="dialButton" id="dialBtn_9"/>
</Panel>

</XmlLayout>
