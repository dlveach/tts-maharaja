<Panel id="replace_character_pnl"   active="false"
  allowDragging="true"
  returnToOriginalPositionWhenReleased="false"
  height="220" width="420"
  padding="10 10 10 10"
  color="#003699"
  image="Sprites/Layout/Base">
  <Panel
    color="#00091a"
    image="Sprites/Layout/Base"
    childAlignment="MiddleCenter">
    <TableLayout columnWidths="0 0">
      <Row preferredHeight="100">
        <Cell padding="0 0 0 0" columnSpan="2">
          <VerticalLayout>
            <Text id="replace_character_txt" fontSize="24" color="Green" text="Green"/>
            <Text class="large" color="Gray">Choose a replacement character</Text>
          </VerticalLayout>
        </Cell>
      </Row>
      <Row preferredHeight="80">
        <Cell padding="25 25 20 5">
          <Panel id="replace_done_pnl" visibility="Pink">
            <Button id="replace_char_done" onClick="replaceCharDialogBtn">
              <Text fontSize="20" color="rgb(1,1,0)" textShadow="rgba(0,0,0,1)" text="Done"/>
            </Button>
          </Panel>
        </Cell>
        <Cell padding="25 25 20 5">
          <Panel id="replace_undo_pnl" visibility="Pink">
            <Button id="replace_char_undo" onClick="replaceCharDialogBtn">
              <Text fontSize="20" color="rgb(1,1,0)" textShadow="rgba(0,0,0,1)" text="Undo"/>
            </Button>
          </Panel>
        </Cell>
      </Row>
    </TableLayout>
  </Panel>
</Panel>

<Panel id="penalty_dialog_pnl"  active="false"
  height="220" width="420"
  padding="10 10 10 10"
  color="#003699"
  image="Sprites/Layout/Base">
  <Panel
    color="#00091a"
    image="Sprites/Layout/Base"
    childAlignment="MiddleCenter">
    <TableLayout>
      <Row preferredHeight="100">
        <Cell padding="0 0 0 0">
          <Text class="large" color="Gray">
            *** Warning ***
            You still have required actions
            Penalty: Other players +2 gold.
           </Text>
        </Cell>
      </Row>
      <Row preferredHeight="80">
        <Cell padding="25 25 20 5">
          <HorizontalLayout
            spacing="40">
            <Button id="end_turn_ok" onClick="penaltyDialogBtn" fontSize="20" text="OK"/>
            <Button id="end_turn_cancel" onClick="penaltyDialogBtn" fontSize="20" text="Cancel"/>
          </HorizontalLayout>
        </Cell>
      </Row>
    </TableLayout>
  </Panel>
</Panel>

<Panel id="startPanel"  active="false"
  allowDragging="true"
  returnToOriginalPositionWhenReleased="false"
  height="400" width="500"
  padding="20 20 20 20"
  color="#003699"
  image="Sprites/Layout/Base">
  <VerticalLayout
    color="#00091a"
    image="Sprites/Layout/Base"
    childAlignment="MiddleCenter"
    spacing="0">
    <Panel padding="0 0 10 10">
      <Text class="large" color="grey" text="After all players are seated:"/>
    </Panel>
    <Panel padding="150 150 0 0">
      <Button id="startButton" onClick="startGameBtn"
        fontSize="20" text="Start"/>
    </Panel>
    <Panel padding="0 0 40 0">
      <Text class="medium" color="grey" text="Game options:"/>
    </Panel>
    <Panel padding="100 100 0 60">
      <VerticalLayout allowDragging="false"
        spacing="1" rectAlignment="Center" offsetXY="0 0">
        <Toggle class="Options" id="opt_use_auction" text="  Auction starting characters" />
        <Toggle class="Options" id="opt_verbose" text="  Verbose game messages" />
      </VerticalLayout>
    </Panel>
  </VerticalLayout>
</Panel>

<Panel id="statusPanel" active="false"
  allowDragging="true"
  returnToOriginalPositionWhenReleased="false"
  width="320" height="370"
  offsetXY="-750 350"
  color="rgba(0,0,0,0)" >
  <TableLayout id="Status_table"
    raycastTarget="true">
    <Row
      preferredHeight="40"
      color="rgba(0,0,0,0)" >
      <Cell>
        <Panel id="status_title" image="Sprites/Layout/Title" color="#003699" onClick="statusClick">
          <TableLayout columnWidths="40 0 40">
            <Row preferredHeight="40">
              <Cell padding="10 10 10 10">
                <Button id="prefs_togglePrefs_btn" onClick="prefsOptionClick" tooltip="Toggle Player Preferences">
                  <Image image="Sprites/Icons/Cog" color="rgb(0.8,0.8,0.8)" />
                </Button>
              </Cell>
              <Cell padding="0 0 0 0">
                <Text class="medium" color="rgb(0.8,0.8,0.8)" text="City Scoring Status"/>
              </Cell>
              <Cell/>
            </Row>
          </TableLayout>
        </Panel>
      </Cell>
    </Row>
    <Row id="status_info" preferredHeight="240">
      <Cell>
        <Panel color="#00091a" >
          <TableLayout id="status_table" columnWidths="100 40 36" color="rgba(0,0,0,0)">
            <Row id="status_header_row">
              <Cell/>
              <Cell/>
              <Cell id="status_h_template"><Text class="medium" color="Gray" text="?"/></Cell>
            </Row>
            <Row id="status_row_template">
              <Cell><Image image="Sprites/Layout/Button" color="#003699">
                <Text id="status_city_name_template" class="medium" color="rgb(0.8,0.8,0.8)" text=""/>
              </Image></Cell>
              <Cell padding=" 10 3 3"><Image id="status_city_image_template" image="" preserveAspect="true"/></Cell>
              <Cell id="status_p_template"><Text id="status_p_text_template" class="medium" text="?"/></Cell>
            </Row>
          </TableLayout>
        </Panel>
      </Cell>
    </Row>
  </TableLayout>
  <Panel id="prefs_panel" active="false"
    visibility=""
    height="220" width="400"
    offsetXY="0 -220"
    rectAlignment="MiddleLeft"
    color="#00091a" >
    <TableLayout id="prefs_table" columnWidths="80 0" color="rgba(0,0,0,0)">
      <Row>
        <Cell padding="0 0 0 0" columnSpan="2">
          <Panel image="Sprites/Layout/Title" color="#003699">
            <Text color="rgb(0.8,0.8,0.8)" text="Player Preferences"/>
          </Panel>
        </Cell>
      </Row>
      <Row preferredHeight="60">
        <Cell padding="0 0 0 0">
          <Toggle class="Options" id="pref_zeroCostRoute_opt" onValueChanged="prefsOptionClick" isOn="true"/>
        </Cell>
        <Cell padding="0 0 0 0">
          <Text color="rgb(0.8,0.8,0.8)" fontsize="12" alignment="MiddleLeft">
            Auto select a zero cost Architect route.
            Route selection dialog will not be shown if one exists.
          </Text>
        </Cell>
      </Row>
      <Row preferredHeight="60">
        <Cell padding="0 0 0 0">
          <Toggle class="Options" id="pref_uniqeLeastCostRoute_opt" onValueChanged="prefsOptionClick" isOn="false"/>
        </Cell>
        <Cell padding="0 0 0 0">
          <Text color="rgb(0.8,0.8,0.8)" fontSize="12" alignment="MiddleLeft">
            Auto select the least cost Architect route if unique.
            Route selection dialog will still show if more than one
            route payout combination is possible at the lowest cost.
          </Text>
        </Cell>
      </Row>
      <Row preferredHeight="60">
        <Cell padding="150 150 20 10" columnSpan="2">
          <Button id="pref_close_btn" onClick="prefsOptionClick" >
            <Text color="rgb(1,1,0)" text="Close"/>
          </Button>
        </Cell>
      </Row>
    </TableLayout>
  </Panel>
</Panel>

<Panel id="routes_dialog_pnl" active="false"
  allowDragging="true"
  returnToOriginalPositionWhenReleased="false"
  width="226" height="400"
  offsetXY="500 100"
  color="rgba(0,0,0,0)" >
  <TableLayout id="route_picker_tbl"
    raycastTarget="true">
    <Row preferredHeight="40" color="rgba(0,0,0,0)" >
      <Cell>
        <Panel image="Sprites/Layout/Title" color="#003699" >
          <TableLayout columnWidths="80 0 70">
            <Row preferredHeight="45">
              <Cell padding="0 0 0 0">
                <Text id="routes_dialog_title_player" class="large" color="Gray" text="Gray"/>
              </Cell>
              <Cell padding="0 0 0 0">
                <Text class="medium" color="rgb(0.8,0.8,0.8)" text="Choose a Route"/>
              </Cell>
              <Cell padding="5 5 5 10">
                <Button id="routes_dialog_cancel" onClick="routeSelectClick">
                  <Text class="medium" text="Cancel"/>
                </Button>
              </Cell>
            </Row>
          </TableLayout>
        </Panel>
      </Cell>
    </Row>
    <Row preferredHeight="360">
      <Cell>
        <Panel color="#00091a">
          <TableLayout id="routes_main_tbl" columnWidths="120 40 36 36 36 36" color="rgba(0,0,0,0)">
            <Row id="routes_header_row" preferredHeight="30">
              <Cell/>

              <Cell><Text class="medium" color="rgb(0.8,0.8,0.8)" text="T" /></Cell>

              <Cell id="routes_h_template">
                <Button id="route_h_p_btn_template" class="routeHeaderButton">
                  <Text class="medium" color="Grey" text="C"/>
                </Button>
              </Cell>

              <Cell/>

            </Row>
            <Row id="route_details_row" preferredHeight="330">
              <Cell id="route_details_cell" columnSpan="8">
                <VerticalScrollView id="routes_scroll_view" color="#00091a"
                  scrollbarColors="#174DAD|#174DAD|#174DAD|#174DAD" scrollbarImage="Sprites/Layout/Base"
                  scrollbarBackgroundColor="#2C63A3">

                  <TableLayout id="route_tbl" columnWidths="120 40 36 36 36" color="rgba(0,0,0,0)"
                    autoCalculateHeight="true">

                    <Row id="route_n_row_template">
                      <Cell>
                        <Button id="route_n_btn_template" image="Sprites/Layout/Button" onClick="routeSelectClick">
                          <Text id="route_n_btn_txt_template" class="medium" color="rgb(1,1,0)" text="1 2 3 4 5 6 7 8"/>
                        </Button>
                      </Cell>
                      <Cell >
                        <Text id="route_n_total_cost_template" class="medium" color="rgb(0.8,0.8,0.8)" text="0"/>
                      </Cell>
                      <Cell id="route_n_pcol_cost_template">
                        <Text id="route_n_pcol_cost_txt_template" class="medium" text="0"/>
                      </Cell>

                    </Row>

                  </TableLayout>
                </VerticalScrollView>
              </Cell>
            </Row>
          </TableLayout>
        </Panel>
      </Cell>
    </Row>
  </TableLayout>
</Panel>


</XmlLayout>

