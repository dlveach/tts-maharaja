<!-- Xml UI. See documentation: https://api.tabletopsimulator.com/ui/introUI/ -->
<XmlLayout xmlns="XmlLayout"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="XmlLayout Configuration/XmlLayout.xsd">

 <Defaults>   <!-- BoSL defaults -->

  <Panel
    allowDragging="false"
    returnToOriginalPositionWhenReleased="false"
    rectAlignment="MiddleCenter" />

  <Button hoverClass="hover"
    pressClass="press"
    selectClass="select"
    color="blue"
    textColor="rgb(1,1,0)"
    fontSize="14"
    font="Arial"
    image="Sprites/Layout/Button"
    textShadow="rgba(0,0,0,0.6)" />
  <Button class="hover"
    color="cyan"
    textShadow="rgba(0,0,0,1)"/>
  <Button class="press"
    color="blue"
    textColor="white" />
  <Button class="select"
    color="blue"
    textColor="white"
    textShadow="rgba(0,0,0,1)" />

  <Button class="routeHeaderButton"
    image="Sprites/Layout/Button"
    colors="Black|Grey|Black|Black"
    onClick="routeSelectClick" />

  <Toggle class="Options"
    onValueChanged="startOptionsBtn"
    colors="blue|cyan|cyan|grey)"
    textColor="grey" />

  <TableLayout
    autoCalculateHeight="true"
    useGlobalCellPadding="false"
    padding="0 0 0 0"
    color="rgba(0,0,0,0)"
    rowBackgroundColor="rgba(0,0,0,0)" />

  <Row
    preferredHeight="30"
    dontUseTableRowBackground="true"
    color="rgba(0,0,0,0)"  />

  <!-- Cell dontUseTableCellBackground false during dev to show lines -->
  <Cell
    dontUseTableCellBackground="true"
    color="rgba(0,0,0,0)"
    padding="0 0 0 0" />

  <Text class="small"
    fontSize="12"
    color="white"/>
  <Text class="medium"
    fontSize="14"
    color="white"/>
  <Text class="med_large"
    fontSize="18"
    color="white"/>
  <Text class="large"
    fontSize="20"
    color="white" />

</Defaults>

<Panel id="restore_dialog_pnl"  active="false"
  height="120" width="420"
  padding="10 10 10 10"
  color="#003699"
  image="Sprites/Layout/Base">
  <Panel
    color="#00091a"
    image="Sprites/Layout/Base"
    childAlignment="MiddleCenter">
    <TableLayout>
      <Row preferredHeight="100">
        <Cell padding="0 0 0 0">
          <Text class="large" color="Gray">
            Restoring game from save ...
           </Text>
        </Cell>
      </Row>
    </TableLayout>
  </Panel>
</Panel>

